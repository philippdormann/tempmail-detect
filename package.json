{
	"name": "tempmail-detect",
	"version": "1.0.3",
	"description": "node module to detect temporary email addresses known for spam",
	"module": "./dist/index.js",
	"type": "module",
	"files": [
		"./dist/index.js",
		"./dist/index.d.ts"
	],
	"scripts": {
		"dist": "bun run build.ts && bun run dist.ts",
		"release": "release-it"
	},
	"keywords": [
		"spammail",
		"spam-mail",
		"is-tempmail",
		"temp-mail",
		"mail",
		"disposable",
		"disposable emails",
		"detector"
	],
	"devDependencies": {
		"@types/bun": "latest",
		"auto-changelog": "^2.5.0",
		"bun-plugin-dts": "^0.3.0",
		"release-it": "^19.0.3"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"release-it": {
		"git": {
			"commit": true,
			"requireBranch": "main",
			"requireCleanWorkingDir": false,
			"commitMessage": "chore(release): v${version}",
			"push": true,
			"tag": true,
			"tagName": "v${version}",
			"tagAnnotation": "v${version}"
		},
		"npm": {
			"publish": false
		},
		"hooks": {
			"after:bump": "auto-changelog --commit-limit false -p -u --hide-credit && bun run dist . && git add ."
		}
	}
}
